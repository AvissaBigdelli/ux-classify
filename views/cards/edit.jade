extends ../layout

block content
    h1.
        Card ID #{card._id}
    form(action='/cards/#{card._id}/edit',method='post',name='updatecard',enctype='application/x-www-form-urlencoded')
        p Name: 
            input#inputName(type='text', value='#{card.name}', name='name')
        p Badge: 
            input#inputBadge(type='number', value='#{card.badge}', name='badge')
        p DOB: 
            input#inputDob(type='date', value='#{carddob}', name='dob')
        p Are you Loved?: 
            input#inputIsLoved(type='checkbox', name='isloved', checked=('#{card.isloved}'==='true' ? "checked" : undefined))
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update